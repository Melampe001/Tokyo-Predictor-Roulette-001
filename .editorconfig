# EditorConfig para Tokyo Roulette
# https://editorconfig.org

root = true

# Configuración global
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Dart y Flutter
[*.dart]
indent_style = space
indent_size = 2
max_line_length = 80
quote_type = single

# YAML (pubspec.yaml, analysis_options.yaml, workflows)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON (configuraciones, Firebase)
[*.json]
indent_style = space
indent_size = 2

# Markdown (documentación)
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 120

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Python (health agent scripts)
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# Gradle (Android build)
[*.gradle]
indent_style = space
indent_size = 4

# XML (Android manifests, recursos)
[*.xml]
indent_style = space
indent_size = 4

# Properties files
[*.properties]
indent_style = space
indent_size = 4

# Git
[.gitignore]
indent_style = space
indent_size = 2

# GitHub workflows
[.github/workflows/*.yml]
indent_style = space
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab
