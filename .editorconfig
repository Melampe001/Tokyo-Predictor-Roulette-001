# EditorConfig helps maintain consistent coding styles across editors and IDEs
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

# Dart files
[*.dart]
indent_size = 2
max_line_length = 80

# YAML files (pubspec.yaml, analysis_options.yaml, CI configs)
[*.{yaml,yml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Gradle files
[*.gradle]
indent_size = 4

# Kotlin files
[*.{kt,kts}]
indent_size = 4
max_line_length = 120

# XML files (Android manifests, resources)
[*.xml]
indent_size = 4

# Properties files
[*.properties]
indent_size = 4

# Shell scripts
[*.{sh,bash}]
indent_size = 4
